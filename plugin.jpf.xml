<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 0.4" "http://jpf.sourceforge.net/plugin_0_4.dtd">

<plugin id="org.coode.matrix" version="1.0.6.MatrixView">

    <attributes>
        <attribute id="update-url" value="http://co-ode-owl-plugins.googlecode.com/svn/trunk/matrix/update.xml"/>
    </attributes>

    <requires>
        <import plugin-id="org.protege.editor.core.application"/>
        <import plugin-id="org.protege.editor.owl"/>
    </requires>

    <runtime>
        <library id="MatrixView" path="classes/" type="code">
        </library>
        <library id="resources" path="resources/" type="resources"/>
        <library id="jtreetable" path="lib/jtreetable.jar" type="code">
            <export prefix="*"/>
        </library>
    </runtime>

    <!-- Declare extension points for the app -->

    <extension plugin-id="org.protege.editor.core.application" point-id="WorkspaceTab" id="org.coode.MatrixTab">
        <parameter id="label" value="Matrix"/>
        <parameter id="class" value="org.protege.editor.core.ui.workspace.WorkspaceViewsTab"/>
        <parameter id="editorKitId" value="OWLEditorKit"/>
        <parameter id="index" value="F"/>
        <parameter id="defaultViewConfigFileName" value="org.coode.MatrixTab.xml"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.ExistentialMatrixView">
        <parameter id="label" value="Class Existential Matrix"/>
        <parameter id="class" value="org.coode.matrix.ui.view.ClassExistentialTreeMatrixView"/>
        <parameter id="headerColor" value="@org.protege.classcolor"/>
        <parameter id="category" value="@org.protege.classcategory"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.AnnotationMatrixView">
        <parameter id="label" value="Class Annotations Matrix"/>
        <parameter id="class" value="org.coode.matrix.ui.view.ClassAnnotationTreeMatrixView"/>
        <parameter id="headerColor" value="@org.protege.classcolor"/>
        <parameter id="category" value="@org.protege.classcategory"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.IndividualMatrixView">
        <parameter id="label" value="Individual Relationships Matrix"/>
        <parameter id="class" value="org.coode.matrix.ui.view.IndividualRelationshipsTreeMatrixView"/>
        <parameter id="headerColor" value="@org.protege.individualcolor"/>
        <parameter id="category" value="@org.protege.individualcategory"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.ClassMembersMatrixView">
        <parameter id="label" value="Class Members Matrix"/>
        <parameter id="class" value="org.coode.matrix.ui.view.ClassMembershipTreeMatrixView"/>
        <parameter id="headerColor" value="@org.protege.individualcolor"/>
        <parameter id="category" value="@org.protege.individualcategory"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.ObjPropsPalette">
        <parameter id="label" value="Object Props"/>
        <parameter id="class" value="org.protege.editor.owl.ui.propertyhierarchy.OWLObjectPropertyTreeView"/>
        <parameter id="headerColor" value="@org.protege.objectpropertycolor"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.ClassPalette">
        <parameter id="label" value="Classes Palette"/>
        <parameter id="class" value="org.coode.matrix.ui.palette.ClassPalette"/>
        <parameter id="headerColor" value="@org.protege.classcolor"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.IndividualsPalette">
        <parameter id="label" value="Individuals Palette"/>
        <parameter id="class" value="org.coode.matrix.ui.palette.IndividualsPalette"/>
        <parameter id="headerColor" value="@org.protege.individualcolor"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.AnnotationURIPalette">
        <parameter id="label" value="Annotation URI Palette"/>
        <parameter id="class" value="org.coode.matrix.ui.palette.AnnotationURIPalette"/>
    </extension>

    <!-- Properties Matrix -->

    <extension plugin-id="org.protege.editor.core.application" point-id="WorkspaceTab" id="org.coode.PropertyMatrixTab">
        <parameter id="label" value="Property Matrix"/>
        <parameter id="class" value="org.protege.editor.core.ui.workspace.WorkspaceViewsTab"/>
        <parameter id="editorKitId" value="OWLEditorKit"/>
        <parameter id="index" value="G"/>
        <parameter id="defaultViewConfigFileName" value="org.coode.PropertyMatrixTab.xml"/>
    </extension>

    <extension plugin-id="org.protege.editor.core.application" point-id="ViewComponent" id="org.coode.PropertyMatrixView">
        <parameter id="label" value="Object Property Features Matrix"/>
        <parameter id="class" value="org.coode.matrix.ui.view.PropertyTreeMatrixView"/>
        <parameter id="headerColor" value="@org.protege.objectpropertycolor"/>
        <parameter id="category" value="@org.protege.objectpropertycategory"/>
    </extension>

</plugin>

